#define pb push_back
#define ppb pop_back
#define ln "\n"
 
int main() {
  ios_base::sync_with_stdio(0);
  ll t;
  cin >> t;
  
  while(t--){
      ll a,b,ans;
      cin >> a >> b;
      ans = (a+b)/3;
      ans = min(ans, a); ans = min(ans, b);
      cout << ans << ln;
  }
  return 0;
}
